<div class="container ssdimg ssdPadTop">
    <a name="cpzx" class="dark"></a>
    <div class="row">
        <div class="col-md-12 ssdPadBot">
            <div class="ssdTitle">产品中心</div>
        </div>

        <div class="col-md-12">
            <ul class="nav nav-tabs" role="tablist">
                @foreach (var item in Model.Categories)
                {
                    <li class="nav-item" role="presentation">
                        <a class="nav-link @(Model.Categories.ToList().IndexOf(item)==0?"active":"")" id="@(item.Code)-tab" data-toggle="tab" href="#@(item.Code)" role="tab" aria-controls="@item.Code" aria-selected="@(Model.Categories.ToList().IndexOf(item)==0)">@item.Name</a>
                    </li>
                }
            </ul>
            <div class="tab-content ssdPadBot" style="padding-top:25px;">
                @foreach (var item in Model.Categories)
                {
                    <div class="tab-pane fade @(Model.Categories.ToList().IndexOf(item)==0?"show active":"")" id="@item.Code" role="tabpanel" aria-labelledby="@(item.Code)-tab">
                        <div class="row">

                            @foreach (var article in Model.Articles.Where(a => a.CategoryId == item.Id))
                            {
                                <div class="col-12 col-md-3">
                                    <div class="ssdPadBot ssdImgAnimation">
                                        <a asp-action="detail" asp-controller="home" asp-route-id="@article.Id" target="_blank">
                                            @if (string.IsNullOrWhiteSpace(article.Cover))
                                            {
                                                <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c" /><text x="40%" y="50%" fill="#eceeef" dy=".3em">暂无图片</text></svg>
                                            }
                                            else
                                            {
                                                <img data-original="@(article.Cover)" alt="@article.Title" />
                                            }
                                            <figcaption class="text-center">@(article.Title)</figcaption>
                                        </a>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

